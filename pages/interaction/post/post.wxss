page {
  background-color: #fefefe;
}

.post-container {
  padding: 20rpx;
}

.post-container .content-input {
  caret-color: #6190E8;
  color: #333333;
  font-weight: bold;
  font-size: 30rpx;
}


.img-input {
  height: 200rpx;
}

.post-wrapper {
  background-color: #ffffff;
  width: 100%;
  padding: 20rpx;
  padding-top: 40rpx;
  border-radius: 10rpx;
  box-shadow: 0 8rpx 10rpx rgba(226, 226, 226, .3);
}

.box-dashed {
  border: 2rpx #eeeeee dashed;
}

.post-button {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 40rpx;
  width: 100%;
  height: 100rpx;
  background-color: #6190E8;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 16rpx rgba(97, 144, 232, .3);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
}

.opacity {
  opacity: .6;
}

@keyframes spin {
	0% {
		-webkit-transform: rotate(0);
		transform: rotate(0);
	}

	100% {
		-webkit-transform: rotate(360deg);
		transform: rotate(360deg);
	}
}

.spin {
	-webkit-animation: spin 1s infinite linear;
	animation: spin 1s infinite linear;
	display: inline-block;
}